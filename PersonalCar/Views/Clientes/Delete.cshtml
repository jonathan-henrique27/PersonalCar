@model PersonalCar.Models.Domains.Cliente
@{
    ViewData["Title"] = "Deletar";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Você tem certeza que gostaria de deletar este cliente?</h4>
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">x</span><span class="sr-only">Close</span>
            </button>
        </div>
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.NomeFantasia)</dt>
                <dd>@Html.DisplayFor(model => model.NomeFantasia)</dd>
            </dl>
        </div>
        <div class="modal-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-gutters color">
                    <input type="submit"  id="botao" value="Deletar" class="btn btn-danger" />
                    <button type="button"  id="botao" class="btn btn-success" data-dismiss="modal">Cancelar</button>
                </div>
            }
        </div>
    </div>
    <div>
        @Html.ActionLink("Retornar para a Lista", "Index")
    </div>
</div>

