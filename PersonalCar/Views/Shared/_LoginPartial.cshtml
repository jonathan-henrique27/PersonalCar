@using Microsoft.AspNetCore.Identity
@using PersonalCar.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-color1" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>


    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a class="nav-link" asp-area="" asp-controller="vouchers" asp-action="Index">Vouchers</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" asp-area="" asp-controller="unidadesdenegocio" asp-action="Index">Unidades</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" asp-area="" asp-controller="solicitantes" asp-action="Index">Solicitantes</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" asp-area="" asp-controller="centrodecustos" asp-action="Index">Centro de Custos</a>
        </li>

    </ul>

    <ul class="navbar-nav">
    <li class="nav-item">
        <a id="manage" class="nav-link text-break" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item ">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-break">Sair</button>
        </form>
    </li>
    </ul>
}
