@model IEnumerable<PersonalCar.Models.Domains.UnidadeDeNegocio>
@{
    ViewBag.Title = "Unidades";
}

<h4>Unidades</h4>

<p>
    <button class="btn btn-success create">Criar Nova Unidade<i class="glyphicon glyphicon-open"></i></button>
</p>

<table class="table">

    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.NomeFantasia)</th>
        <th>@Html.DisplayNameFor(model => model.RazaoSocial)</th>
        <th>@Html.DisplayNameFor(model => model.Cnpj)</th>
        <th>@Html.DisplayNameFor(model => model.Cidade)</th>
        <th>@Html.DisplayNameFor(model => model.Estado)</th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.NomeFantasia)</td>
            <td>@Html.DisplayFor(modelItem => item.RazaoSocial)</td>
            <td>@Html.DisplayFor(modelItem => item.Cnpj)</td>
            <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
            <td>
                <button class="btn btn-success details" data-id="@item.Id">Detalhes<i class="glyphicon glyphicon-file"></i></button>
                <button class="btn btn-danger edit" data-id="@item.Id">Editar<i class="glyphicon glyphicon-edit"></i></button>
                <button class="btn btn-primary delete" data-id="@item.Id">Deletar<i class="glyphicon glyphicon-trash"></i></button>
            </td>
        </tr>
    }
</table>

<div id="modal" class="modal fade" role="dialog" />
@section scripts{
    <script>
        $(function () {

            $(".create").click(function () {
                $("#modal").load("/unidadesdenegocio/create", function () {
                    $("#modal").modal();
                })
            });
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/unidadesdenegocio/details/" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/unidadesdenegocio/edit/" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".delete").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/unidadesdenegocio/delete/" + id, function () {
                    $("#modal").modal();
                })
            });

            ;

        })
    </script>
}

