@model PersonalCar.Models.Domains.Passageiro

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalhes do Passageiros</h4>
            </div>
            <div class="modal-body">
               
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Celular)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Celular)
                    </dd>
               
            </div>
                <div class="modal-footer">
                    <button type="button" id="botao" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                </div>

        </div>
    </div>
</div>