@model IEnumerable<PersonalCar.Models.Domains.Voucher>

@{
    ViewData["Title"] = "Voucher";
}

<h4>Voucher</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
    

<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.ControleDeTaxiamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataSolicitacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotalDaViagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CentroDeCusto)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            
            <td>@Html.DisplayFor(modelItem => item.ControleDeTaxiamento)</td>
            <td>@Html.DisplayFor(modelItem => item.DataSolicitacao)</td>
            <td>@Html.DisplayFor(modelItem => item.ValorTotalDaViagem)</td>
            <td>@Html.DisplayFor(modelItem => item.Unidade)</td>
            <td>@Html.DisplayFor(modelItem => item.CentroDeCusto)</td>

            <td>
                <button class="btn btn-success details" data-id="@item.Id">Detalhes<i class="glyphicon glyphicon-file"></i></button>
                <button class="btn btn-primary edit" data-id="@item.Id">Editar<i class="glyphicon glyphicon-edit"></i></button>
                <button class="btn btn-danger delete" data-id="@item.Id">Deletar<i class="glyphicon glyphicon-trash"></i></button>
            </td>
        </tr>
    }
</table>

<div id="modal" class="modal fade" role="dialog" />

@section scripts{
    <script>
        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/vouchers/details/" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/vouchers/edit/" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".delete").click(function () {
                var id = $(this).attr("data-id");

                $("#modal").load("/vouchers/delete/" + id, function () {
                    $("#modal").modal();
                })
            });

           

        })
    </script>
}


