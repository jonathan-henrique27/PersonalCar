@model PersonalCar.Models.ViewModels.SolicitanteViewModel

@{
    ViewData["Title"] = "Criar Solicitante";
}
<hr />
<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div class="form-group">
                <input asp-for="Solicitante.Nome" class="form-control" placeholder="Nome Completo " />
                <span asp-validation-for="Solicitante.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Solicitante.Email" class="form-control" placeholder="E-mail" />
                <span asp-validation-for="Solicitante.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Solicitante.Telecom" class="form-control" placeholder="Telefone Comercial" />
                <span asp-validation-for="Solicitante.Telecom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Solicitante.Celular" class="form-control" placeholder="Telefone Celular" />
                <span asp-validation-for="Solicitante.Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Solicitante.Cargo" class="form-control" placeholder="Cargo" />
                <span asp-validation-for="Solicitante.Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solicitante.UnidadeDeNegocioId" class="control-label"></label>
                <select asp-for="Solicitante.UnidadeDeNegocioId" asp-items="@(new SelectList(Model.UnidadeDeNegocios, "Id", "NomeFantasia"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
