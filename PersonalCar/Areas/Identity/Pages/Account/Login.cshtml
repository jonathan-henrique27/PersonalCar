@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";

}

@{ Layout = "/Areas/Identity/Pages/_AuthLayout.cshtml";}

    <h2>Login</h2>
    <div class="col-md-10 offset-1">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group col-lg-10 ">
                    <label asp-for="Input.Email "></label>
                    <input asp-for="Input.Email" class="form-control " style="border-radius: 10px;" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10 ">
                    <label asp-for="Input.Password">Senha</label>
                    <input asp-for="Input.Password" class="form-control " style="border-radius: 10px;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group " >
                    <button type="submit" class="btn btn-primary btn-block " style="border-radius: 10px; width:30%" >Acessar</button>
                </div>
            </form>
        </section>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
